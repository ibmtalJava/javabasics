package customComputer;

public class Mainboard {
// Mainboard,Cpu,Ram,Hdd,Monitor,Case,Keyboard,Mouse,PowerSupply
	public String name;
	public String brand;
	public int maxRam;
	public double price;
	public boolean vgaOut;
	public int usbCount;
	public Mainboard() {
		super();
	}

	public Mainboard(String name, String brand, int maxRam, double price, boolean vgaOut) {
		super();
		this.name = name;
		this.brand = brand;
		this.maxRam = maxRam;
		this.price = price;
		this.vgaOut = vgaOut;
	}

	public Mainboard(String name, String brand, int maxRam, double price, boolean vgaOut, int usbCount) {
		super();
		this.name = name;
		this.brand = brand;
		this.maxRam = maxRam;
		this.price = price;
		this.vgaOut = vgaOut;
		this.usbCount = usbCount;
	}

	public void print() {
		System.out.println("---Anakart Özellikleri-----");
		System.out.println("Anakart :"+this.name);
		System.out.println("Marka :"+this.brand);
		System.out.println("Ram Kapasitesi :"+this.maxRam+" GB");
		System.out.println("VGA Çýkýþý :"+(this.vgaOut?"Var":"YOK"));
		System.out.println("Fiyat :"+this.price+" TL");
		System.out.println("Ahmet Yagiz");
	}
}
